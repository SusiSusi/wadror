<h1>Users</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Username</th>
    <th> rated beers </th>
    <th> total ratings </th>
    <th></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td>
        <% if current_user && current_user.admin && user.chilled %>
            <span class="label label-info btn-xs">Account frozen</span>
        <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to 'Create a new user', new_user_path, class:'btn btn-default' %>
