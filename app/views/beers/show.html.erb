<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <strong>Ratings:</strong>
  <% if @beer.ratings.empty? %>
      Beer has not yet been rated!
  <% else %>
      Has <%= pluralize(@beer.ratings.count, 'rating') %>, average <%= @beer.average_rating %>
  <% end %>
</p>

<br>

<%= link_to 'Edit', edit_beer_path(@beer) if current_user %>
<br>
<%= link_to 'Destroy beer', @beer, method: :delete, data: { confirm: 'Are you sure?' } if current_user %>


